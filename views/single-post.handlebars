{{!-- posts --}}
<div class="post">
    <article class="card">
        <div class="card-header">
            <h2>{{post.title}}</h2>
            <div> Posted by {{post.User.username}} </div>
        </div>
        <div class="card-body"> {{post.body}} </div>
    </article>


{{!-- Comments --}}
{{#if post.Comments}}
<section class="card">
    <div class="card-header">
        <h3> Comments </h3>
    </div>

    <div class="card-body"> {{#each post.Comments}} </div>
    <p> {{body}} </p>
    <p> Post by: {{User.username}} </p>
    </div>
    {{/each}}
    </div>
</section>
{{/if}}

{{!-- new comment form --}}
<form class="card" id="comment-form">
    <div class=""card-header>
        <h3> Add Comment </h3>
    </div>

    <div class="card-body">
        <input type="hidden" name="post_id" value="{{post.id}}"/>
        <label class="form-label"> Comment </label>
        <textarea class="form-input"></textarea>
        <button class="button" type="submit" > Submit </button>
    </div>
</form>
</div>

<script src="/public/js/comment.js"></script>